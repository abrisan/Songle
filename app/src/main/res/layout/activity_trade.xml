<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.songle.s1505883.songle.TradeActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_trade"
        android:id="@+id/mkTradeButton"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button"
        android:onClick="mkTradeClicked"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/trade_cardview"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/mkTradeButton"
        />

</RelativeLayout>
